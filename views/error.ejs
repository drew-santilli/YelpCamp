<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading text-xxl-center text-black">
        <%= err.message %>
      </h4>
      <div class="row">
        <div class="">
          <p><%= err.stack %></p>
        </div>
      </div>

      <hr />
      <p class="mb-0 text-xxl-center text-black"><%= err.statusCode %></p>
      <p>
        “Dwell on the beauty of life. Watch the stars, and see yourself running
        with them.”
      </p>
    </div>
  </div>
</div>
